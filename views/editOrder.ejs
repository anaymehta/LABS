<% include partials/header5 %>

<div class="ui main text container segment">
	<div class="ui huge header">Edit <%= order.name %></div>
	<form class="ui form" action="/order/<%= order._id%>?_method=PUT" method="POST">
		<div class="field">
			<label>Order Name</label>
			<input type="text" name="order[name]" value="<%= order.name %>">
		</div>
		<div class="field">
			<label>Additional Information</label>
			<textarea name="order[info]"><%= order.info %></textarea>
		</div>
		<input id="submit" class="ui huge orange basic button btn-block" type="submit">
	</form>
</div>

