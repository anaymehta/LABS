<% include partials/header5 %>

<div class="ui main text container segment">
	<div class="ui huge header">Edit <%= equipment.name %></div>
	<form class="ui form" action="/eqList/<%= equipment._id%>?_method=PUT" method="POST">
		<div class="field">
			<label>Name</label>
			<input type="text" name="equipment[name]" value="<%= equipment.name %>">
		</div>
		<div class="field">
			<label>Image</label>
			<input type="text" name="equipment[image]" value="<%= equipment.image %>">
		</div>
		<div class="field">
			<label>Description</label>
			<textarea name="equipment[description]"><%= equipment.description %></textarea>
		</div>
		<input id="submit" class="ui huge orange basic button btn-block" type="submit">
	</form>
</div>

<% include partials/footer%>
